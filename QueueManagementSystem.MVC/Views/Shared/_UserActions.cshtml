@using System.Security.Claims
@using QueueManagementSystem.MVC.Views.Shared.Components.Notice

@if (!Context.User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </ul>
}
else
{
    var email = Context.User.FindFirst(c => c.Type == ClaimTypes.Name)?.Value;


    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item dropdown">
            <button class="btn btn-link nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user "></i> <!-- Font Awesome user icon -->
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li>
                    <span class="dropdown-item">@email</span>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                </li>
                
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </li>
    </ul>
    

    <!-- Add Font Awesome for icons (CDN link) -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    <!-- Bootstrap JS (for dropdown functionality) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

}